<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.guiabeaconmaster2.Activitys.Registrar">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/campus3"
        android:scaleType="centerCrop"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:gravity="center"
        android:text="Registro Alumno"
        android:textColor="@color/colorGranada"
        android:textSize="30sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/nombreRegistro"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:hint="Nombre"
        android:textStyle="bold"
        android:singleLine="true"
        android:inputType="text"
        android:textColor="@color/colorNegro"
        android:textColorHint="@color/colorNegro"
        android:textColorHighlight="@android:color/holo_blue_dark"
        android:textColorLink="@android:color/holo_blue_dark" />

        <EditText
            android:id="@+id/apellidoRegistro"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:hint="Apellido"
            android:textStyle="bold"
            android:inputType="text"
            android:singleLine="true"
            android:textColor="@color/colorNegro"
            android:textColorHint="@color/colorNegro"
            android:textColorHighlight="@color/colorGranada"
            android:textColorLink="@color/colorGranada"
            android:textCursorDrawable="@color/colorGranada" />

    <EditText
        android:id="@+id/telefonoRegistro"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:hint="Telefono"
        android:maxLength="19"
        android:inputType="number"
        android:textStyle="bold"
        android:ems="9"
        android:drawableLeft="@drawable/ic_tel"
        android:drawablePadding="10dp"
        android:singleLine="true"
        android:textColor="@color/colorNegro"
        android:textColorHint="@color/colorNegro"
        android:textColorHighlight="@android:color/holo_blue_dark"
        android:textColorLink="@android:color/holo_blue_dark" />

    <EditText
        android:id="@+id/correoRegistro"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:drawablePadding="10dp"
        android:hint="Correo"
        android:inputType="textEmailAddress"
        android:textStyle="bold"
        android:singleLine="true"
        android:drawableLeft="@drawable/ic_mail"
        android:textColor="@color/colorNegro"
        android:textColorHint="@color/colorNegro"
        android:textColorHighlight="@android:color/holo_blue_dark"
        android:textColorLink="@android:color/holo_blue_dark" />

        <EditText
            android:id="@+id/passwordRegistro"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/ic_pass"
            android:drawablePadding="10dp"
            android:hint="Password"
            android:inputType="textPassword"
            android:textStyle="bold"
            android:singleLine="true"
            android:textColor="@color/colorNegro"
            android:textColorHint="@color/colorNegro"
            android:textColorHighlight="@android:color/holo_blue_dark"
            android:textColorLink="@color/colorGranada" />

        <Button
            android:id="@+id/btnRegistro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/fondo"
            android:elevation="5dp"
            android:textStyle="bold"
            android:text="Registrar"
            android:textColor="@drawable/txt_color"
            android:textSize="16sp" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>